<resources>
    <!-- we defined inheritToolbarColor because we want a different view color when we use NightMode (White instead of same as primary color)-->
    <!-- here we defined an attribute, we can use it in views like style="?attr/inheritToolbarColor" or we can use it in our style down below like <item name="inheritToolbarColor">some color</item>-->
    <!-- inheritToolbarColor attr is used in Sports Rule App.-->
    <!-- TODO: add white theme, colored theme, material theme, try color 300 themes from health and fitness -->
    <attr name="inheritToolbarColor" format="reference"/>
    <!-- TODO: Icons and colorAccent needs improvements.-->
    <!-- TODO: Fullscreen, appbar overlay and pop up overlay need to be added too.-->
    <!-- TODO: icons need to be added too.-->
    <!-- TODO: check all values for name attribute like colorBackground, textColor and etc.-->
    <!-- TODO: nightMode colors may need improvements.-->

    <!-- this is the base theme for all light colors -->
    <style name="BaseThemeLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowDisablePreview">true</item>
    </style>

    <!-- this is the base theme for all dark colors -->
    <style name="BaseThemeDark" parent="Theme.AppCompat">
        <item name="android:windowDisablePreview">true</item>
    </style>

    <!-- Red-->
