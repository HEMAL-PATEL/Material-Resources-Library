        <item name="colorAccent">@color/materialAccentOrange</item>
        <item name="android:textColorPrimary">@color/lightTextColorPrimary</item>
        <item name="android:textColorSecondary">@color/lightTextColorSecondary</item>
        <item name="inheritToolbarColor">@color/materialPrimaryRed</item>
    </style>

    <!-- this is the light theme with no action bar-->
    <style name="AppThemeRed.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- fullscreen example -->
    <style name="AppThemeRed.Fullscreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
